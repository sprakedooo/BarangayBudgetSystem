<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Primary Colors -->
    <Color x:Key="PrimaryColor">#007bff</Color>
    <Color x:Key="PrimaryDarkColor">#0056b3</Color>
    <Color x:Key="PrimaryLightColor">#66b0ff</Color>

    <!-- Secondary Colors -->
    <Color x:Key="SecondaryColor">#6c757d</Color>
    <Color x:Key="SecondaryDarkColor">#545b62</Color>
    <Color x:Key="SecondaryLightColor">#adb5bd</Color>

    <!-- Status Colors -->
    <Color x:Key="SuccessColor">#28a745</Color>
    <Color x:Key="SuccessLightColor">#d4edda</Color>
    <Color x:Key="DangerColor">#dc3545</Color>
    <Color x:Key="DangerLightColor">#f8d7da</Color>
    <Color x:Key="WarningColor">#ffc107</Color>
    <Color x:Key="WarningLightColor">#fff3cd</Color>
    <Color x:Key="InfoColor">#17a2b8</Color>
    <Color x:Key="InfoLightColor">#d1ecf1</Color>

    <!-- Background Colors -->
    <Color x:Key="BackgroundColor">#f8f9fa</Color>
    <Color x:Key="CardBackgroundColor">#ffffff</Color>
    <Color x:Key="SidebarBackgroundColor">#343a40</Color>
    <Color x:Key="HeaderBackgroundColor">#ffffff</Color>

    <!-- Text Colors -->
    <Color x:Key="TextPrimaryColor">#212529</Color>
    <Color x:Key="TextSecondaryColor">#6c757d</Color>
    <Color x:Key="TextLightColor">#ffffff</Color>
    <Color x:Key="TextMutedColor">#adb5bd</Color>

    <!-- Border Colors -->
    <Color x:Key="BorderColor">#dee2e6</Color>
    <Color x:Key="BorderLightColor">#e9ecef</Color>
    <Color x:Key="BorderFocusColor">#80bdff</Color>

    <!-- SolidColorBrushes -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="{StaticResource PrimaryDarkColor}"/>
    <SolidColorBrush x:Key="PrimaryLightBrush" Color="{StaticResource PrimaryLightColor}"/>

    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource SecondaryColor}"/>
    <SolidColorBrush x:Key="SecondaryDarkBrush" Color="{StaticResource SecondaryDarkColor}"/>
    <SolidColorBrush x:Key="SecondaryLightBrush" Color="{StaticResource SecondaryLightColor}"/>

    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}"/>
    <SolidColorBrush x:Key="SuccessLightBrush" Color="{StaticResource SuccessLightColor}"/>
    <SolidColorBrush x:Key="DangerBrush" Color="{StaticResource DangerColor}"/>
    <SolidColorBrush x:Key="DangerLightBrush" Color="{StaticResource DangerLightColor}"/>
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}"/>
    <SolidColorBrush x:Key="WarningLightBrush" Color="{StaticResource WarningLightColor}"/>
    <SolidColorBrush x:Key="InfoBrush" Color="{StaticResource InfoColor}"/>
    <SolidColorBrush x:Key="InfoLightBrush" Color="{StaticResource InfoLightColor}"/>

    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="{StaticResource CardBackgroundColor}"/>
    <SolidColorBrush x:Key="SidebarBackgroundBrush" Color="{StaticResource SidebarBackgroundColor}"/>
    <SolidColorBrush x:Key="HeaderBackgroundBrush" Color="{StaticResource HeaderBackgroundColor}"/>

    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}"/>
    <SolidColorBrush x:Key="TextLightBrush" Color="{StaticResource TextLightColor}"/>
    <SolidColorBrush x:Key="TextMutedBrush" Color="{StaticResource TextMutedColor}"/>

    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
    <SolidColorBrush x:Key="BorderLightBrush" Color="{StaticResource BorderLightColor}"/>
    <SolidColorBrush x:Key="BorderFocusBrush" Color="{StaticResource BorderFocusColor}"/>

    <!-- Fund Category Colors -->
    <Color x:Key="GeneralFundColor">#3498db</Color>
    <Color x:Key="SpecialEducationFundColor">#9b59b6</Color>
    <Color x:Key="TrustFundColor">#1abc9c</Color>
    <Color x:Key="SKFundColor">#e74c3c</Color>
    <Color x:Key="DisasterFundColor">#e67e22</Color>
    <Color x:Key="DevelopmentFundColor">#2ecc71</Color>
    <Color x:Key="PersonnelServicesColor">#34495e</Color>
    <Color x:Key="MOOEColor">#f39c12</Color>
    <Color x:Key="CapitalOutlayColor">#16a085</Color>

    <SolidColorBrush x:Key="GeneralFundBrush" Color="{StaticResource GeneralFundColor}"/>
    <SolidColorBrush x:Key="SpecialEducationFundBrush" Color="{StaticResource SpecialEducationFundColor}"/>
    <SolidColorBrush x:Key="TrustFundBrush" Color="{StaticResource TrustFundColor}"/>
    <SolidColorBrush x:Key="SKFundBrush" Color="{StaticResource SKFundColor}"/>
    <SolidColorBrush x:Key="DisasterFundBrush" Color="{StaticResource DisasterFundColor}"/>
    <SolidColorBrush x:Key="DevelopmentFundBrush" Color="{StaticResource DevelopmentFundColor}"/>
    <SolidColorBrush x:Key="PersonnelServicesBrush" Color="{StaticResource PersonnelServicesColor}"/>
    <SolidColorBrush x:Key="MOOEBrush" Color="{StaticResource MOOEColor}"/>
    <SolidColorBrush x:Key="CapitalOutlayBrush" Color="{StaticResource CapitalOutlayColor}"/>

    <!-- Gradient Brushes -->
    <LinearGradientBrush x:Key="PrimaryGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource PrimaryColor}" Offset="0"/>
        <GradientStop Color="{StaticResource PrimaryDarkColor}" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="SidebarGradientBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#2c3e50" Offset="0"/>
        <GradientStop Color="#1a252f" Offset="1"/>
    </LinearGradientBrush>

</ResourceDictionary>
