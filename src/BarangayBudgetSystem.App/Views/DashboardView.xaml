<UserControl x:Class="BarangayBudgetSystem.App.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
             xmlns:helpers="clr-namespace:BarangayBudgetSystem.App.Helpers"
             xmlns:components="clr-namespace:BarangayBudgetSystem.App.Components"
             Background="{StaticResource BackgroundBrush}">

    <UserControl.Resources>
        <helpers:CurrencyConverter x:Key="CurrencyConverter"/>
        <helpers:PercentageConverter x:Key="PercentageConverter"/>
        <helpers:PercentageColorConverter x:Key="PercentageColorConverter"/>
        <helpers:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <helpers:CategoryColorConverter x:Key="CategoryColorConverter"/>
        <helpers:CategoryToShortNameConverter x:Key="CategoryToShortNameConverter"/>
        <helpers:PercentageToProgressColorConverter x:Key="PercentageToProgressColorConverter"/>
        <helpers:PercentageToWidthConverter x:Key="PercentageToWidthConverter"/>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Page Header -->
            <Grid Grid.Row="0" Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Dashboard"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="{StaticResource TextPrimaryBrush}"/>
                    <TextBlock Text="Overview of your barangay budget system"
                               FontSize="14"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               Margin="0,4,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Fiscal Year:"
                               VerticalAlignment="Center"
                               Margin="0,0,8,0"
                               Foreground="{StaticResource TextSecondaryBrush}"/>
                    <ComboBox ItemsSource="{Binding FiscalYears}"
                              SelectedItem="{Binding CurrentFiscalYear}"
                              Width="100"
                              Style="{StaticResource FormComboBoxStyle}"/>
                    <Button Content="Refresh"
                            Command="{Binding RefreshCommand}"
                            Style="{StaticResource OutlineButton}"
                            Margin="12,0,0,0"/>
                </StackPanel>
            </Grid>

            <!-- Loading Indicator -->
            <Border Grid.Row="0" Grid.RowSpan="6"
                    Background="#80FFFFFF"
                    Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                    Panel.ZIndex="100">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <ProgressBar IsIndeterminate="True" Width="200" Height="4"/>
                    <TextBlock Text="{Binding LoadingMessage}"
                               Margin="0,12,0,0"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Summary Cards -->
            <Grid Grid.Row="1" Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Total Budget Card -->
                <Border Grid.Column="0" Style="{StaticResource StatCardStyle}" Margin="0,0,12,0">
                    <StackPanel>
                        <TextBlock Text="Total Budget"
                                   Style="{StaticResource StatLabelStyle}"/>
                        <TextBlock Style="{StaticResource StatValueStyle}"
                                   Foreground="{StaticResource PrimaryBrush}">
                            <TextBlock.Text>
                                <Binding Path="TotalBudget" StringFormat="P{0:N0}"/>
                            </TextBlock.Text>
                        </TextBlock>
                        <TextBlock Text="{Binding TotalFunds, StringFormat='{}{0} active funds'}"
                                   FontSize="12"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Total Expenses Card -->
                <Border Grid.Column="1" Style="{StaticResource StatCardStyle}" Margin="6,0">
                    <StackPanel>
                        <TextBlock Text="Total Expenses"
                                   Style="{StaticResource StatLabelStyle}"/>
                        <TextBlock Style="{StaticResource StatValueStyle}"
                                   Foreground="{StaticResource DangerBrush}">
                            <TextBlock.Text>
                                <Binding Path="TotalExpenses" StringFormat="P{0:N0}"/>
                            </TextBlock.Text>
                        </TextBlock>
                        <TextBlock Text="{Binding OverallUtilization, StringFormat='{}{0:F1}% utilized'}"
                                   FontSize="12"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Remaining Balance Card -->
                <Border Grid.Column="2" Style="{StaticResource StatCardStyle}" Margin="6,0">
                    <StackPanel>
                        <TextBlock Text="Remaining Balance"
                                   Style="{StaticResource StatLabelStyle}"/>
                        <TextBlock Style="{StaticResource StatValueStyle}"
                                   Foreground="{StaticResource SuccessBrush}">
                            <TextBlock.Text>
                                <Binding Path="TotalRemaining" StringFormat="P{0:N0}"/>
                            </TextBlock.Text>
                        </TextBlock>
                        <TextBlock FontSize="12"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   Margin="0,4,0,0">
                            <TextBlock.Text>
                                <MultiBinding StringFormat="{}{0:F1}% remaining">
                                    <Binding Path="TotalRemaining"/>
                                    <Binding Path="TotalBudget"/>
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!-- Pending Approvals Card -->
                <Border Grid.Column="3" Style="{StaticResource StatCardStyle}" Margin="12,0,0,0">
                    <StackPanel>
                        <TextBlock Text="Pending Approvals"
                                   Style="{StaticResource StatLabelStyle}"/>
                        <TextBlock Text="{Binding PendingApprovals}"
                                   Style="{StaticResource StatValueStyle}"
                                   Foreground="{StaticResource WarningBrush}"/>
                        <TextBlock Text="transactions awaiting"
                                   FontSize="12"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Appropriation Categories Section -->
            <Border Grid.Row="2" Style="{StaticResource CardStyle}" Margin="0,0,0,24">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
                        <TextBlock Text="Budget by Appropriation"
                                   FontSize="18"
                                   FontWeight="SemiBold"/>
                        <Border Background="{StaticResource PrimaryBrush}"
                                CornerRadius="10"
                                Padding="8,2"
                                Margin="12,0,0,0"
                                VerticalAlignment="Center">
                            <TextBlock Text="{Binding CategorySummaries.Count, StringFormat='{}{0} categories'}"
                                       Foreground="White"
                                       FontSize="12"
                                       FontWeight="Bold"/>
                        </Border>
                    </StackPanel>

                    <ItemsControl Grid.Row="1" ItemsSource="{Binding CategorySummaries}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{StaticResource CardBackgroundBrush}"
                                        BorderBrush="{StaticResource BorderLightBrush}"
                                        BorderThickness="1"
                                        CornerRadius="8"
                                        Padding="16"
                                        Margin="0,0,12,12"
                                        MinWidth="220">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- Category Header with Color Indicator -->
                                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                                            <Border Width="8" Height="8"
                                                    CornerRadius="4"
                                                    Background="{Binding Category, Converter={StaticResource CategoryColorConverter}}"
                                                    VerticalAlignment="Center"
                                                    Margin="0,0,8,0"/>
                                            <TextBlock Text="{Binding Category}"
                                                       FontWeight="SemiBold"
                                                       FontSize="14"
                                                       TextTrimming="CharacterEllipsis"
                                                       MaxWidth="180"/>
                                        </StackPanel>

                                        <!-- Allocated Amount -->
                                        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,4,0,0">
                                            <TextBlock Text="Allocated:"
                                                       FontSize="12"
                                                       Foreground="{StaticResource TextSecondaryBrush}"
                                                       Width="70"/>
                                            <TextBlock Text="{Binding TotalAllocated, StringFormat='P{0:N0}'}"
                                                       FontSize="12"
                                                       FontWeight="Medium"
                                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                                        </StackPanel>

                                        <!-- Spent Amount -->
                                        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,4,0,0">
                                            <TextBlock Text="Spent:"
                                                       FontSize="12"
                                                       Foreground="{StaticResource TextSecondaryBrush}"
                                                       Width="70"/>
                                            <TextBlock Text="{Binding TotalUtilized, StringFormat='P{0:N0}'}"
                                                       FontSize="12"
                                                       FontWeight="Medium"
                                                       Foreground="{StaticResource DangerBrush}"/>
                                        </StackPanel>

                                        <!-- Remaining Balance -->
                                        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,4,0,0">
                                            <TextBlock Text="Balance:"
                                                       FontSize="12"
                                                       Foreground="{StaticResource TextSecondaryBrush}"
                                                       Width="70"/>
                                            <TextBlock Text="{Binding TotalRemaining, StringFormat='P{0:N0}'}"
                                                       FontSize="12"
                                                       FontWeight="Medium"
                                                       Foreground="{StaticResource SuccessBrush}"/>
                                        </StackPanel>

                                        <!-- Utilization Progress Bar -->
                                        <Grid Grid.Row="4" Margin="0,10,0,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="120"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <ProgressBar Grid.Column="0"
                                                         Value="{Binding UtilizationPercentage, Mode=OneWay}"
                                                         Maximum="100"
                                                         Height="6"
                                                         Foreground="{Binding UtilizationPercentage, Converter={StaticResource PercentageToProgressColorConverter}}"
                                                         Background="{StaticResource BorderLightBrush}"/>

                                            <TextBlock Grid.Column="1"
                                                       Text="{Binding UtilizationPercentage, StringFormat='{}{0:F1}%'}"
                                                       FontSize="11"
                                                       FontWeight="SemiBold"
                                                       Foreground="{Binding UtilizationPercentage, Converter={StaticResource PercentageToProgressColorConverter}}"
                                                       Margin="8,0,0,0"
                                                       VerticalAlignment="Center"/>
                                        </Grid>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </Border>

            <!-- Charts Row -->
            <Grid Grid.Row="3" Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>

                <!-- Budget Distribution Pie Chart -->
                <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,12,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0"
                                   Text="Budget Distribution"
                                   Style="{StaticResource CardHeaderStyle}"/>

                        <lvc:PieChart Grid.Row="1"
                                      Series="{Binding BudgetPieChart}"
                                      MinHeight="250"/>
                    </Grid>
                </Border>

                <!-- Monthly Expenses Chart -->
                <Border Grid.Column="1" Style="{StaticResource CardStyle}" Margin="12,0,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0"
                                   Text="Monthly Expenses"
                                   Style="{StaticResource CardHeaderStyle}"/>

                        <lvc:CartesianChart Grid.Row="1"
                                            Series="{Binding MonthlyExpensesChart}"
                                            XAxes="{Binding MonthlyExpensesXAxes}"
                                            YAxes="{Binding MonthlyExpensesYAxes}"
                                            MinHeight="250"/>
                    </Grid>
                </Border>
            </Grid>

            <!-- Bottom Section -->
            <Grid Grid.Row="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Low Balance Funds Alert -->
                <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,12,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
                            <TextBlock Text="Low Balance Funds"
                                       FontSize="18"
                                       FontWeight="SemiBold"/>
                            <Border Background="{StaticResource DangerBrush}"
                                    CornerRadius="10"
                                    Padding="8,2"
                                    Margin="12,0,0,0"
                                    VerticalAlignment="Center">
                                <TextBlock Text="{Binding LowBalanceFunds.Count}"
                                           Foreground="White"
                                           FontSize="12"
                                           FontWeight="Bold"/>
                            </Border>
                        </StackPanel>

                        <ItemsControl Grid.Row="1"
                                      ItemsSource="{Binding LowBalanceFunds}"
                                      MaxHeight="300">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="{StaticResource BorderLightBrush}"
                                            BorderThickness="0,0,0,1"
                                            Padding="0,8">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding FundName}"
                                                           FontWeight="Medium"
                                                           TextTrimming="CharacterEllipsis"/>
                                                <TextBlock Text="{Binding FundCode}"
                                                           FontSize="12"
                                                           Foreground="{StaticResource TextSecondaryBrush}"/>
                                            </StackPanel>

                                            <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                                                <TextBlock Text="{Binding RemainingBalance, StringFormat='P{0:N2}'}"
                                                           FontWeight="SemiBold"
                                                           Foreground="{StaticResource DangerBrush}"
                                                           HorizontalAlignment="Right"/>
                                                <TextBlock Text="{Binding UtilizationPercentage, StringFormat='{}{0:F1}% used'}"
                                                           FontSize="12"
                                                           Foreground="{StaticResource TextSecondaryBrush}"
                                                           HorizontalAlignment="Right"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </Border>

                <!-- Recent Transactions -->
                <Border Grid.Column="1" Style="{StaticResource CardStyle}" Margin="12,0,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0"
                                   Text="Recent Transactions"
                                   Style="{StaticResource CardHeaderStyle}"/>

                        <ItemsControl Grid.Row="1"
                                      ItemsSource="{Binding RecentTransactions}"
                                      MaxHeight="300">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="{StaticResource BorderLightBrush}"
                                            BorderThickness="0,0,0,1"
                                            Padding="0,8">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding Description}"
                                                           FontWeight="Medium"
                                                           TextTrimming="CharacterEllipsis"/>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{Binding TransactionNumber}"
                                                               FontSize="12"
                                                               Foreground="{StaticResource TextSecondaryBrush}"/>
                                                    <TextBlock Text=" - "
                                                               FontSize="12"
                                                               Foreground="{StaticResource TextSecondaryBrush}"/>
                                                    <TextBlock Text="{Binding TransactionDate, StringFormat='{}{0:MMM dd, yyyy}'}"
                                                               FontSize="12"
                                                               Foreground="{StaticResource TextSecondaryBrush}"/>
                                                </StackPanel>
                                            </StackPanel>

                                            <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                                                <TextBlock Text="{Binding Amount, StringFormat='P{0:N2}'}"
                                                           FontWeight="SemiBold"
                                                           HorizontalAlignment="Right"/>
                                                <components:StatusTag Status="{Binding Status}"
                                                                     HorizontalAlignment="Right"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <Button Grid.Row="2"
                                Content="View All Transactions"
                                Command="{Binding ViewAllTransactionsCommand}"
                                Style="{StaticResource OutlineButton}"
                                HorizontalAlignment="Center"
                                Margin="0,16,0,0"/>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </ScrollViewer>
</UserControl>
