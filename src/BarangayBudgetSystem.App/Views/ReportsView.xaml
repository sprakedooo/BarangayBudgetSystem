<UserControl x:Class="BarangayBudgetSystem.App.Views.ReportsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:helpers="clr-namespace:BarangayBudgetSystem.App.Helpers"
             xmlns:components="clr-namespace:BarangayBudgetSystem.App.Components"
             Background="{DynamicResource BackgroundBrush}">

    <UserControl.Resources>
        <helpers:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <helpers:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Page Header -->
        <Grid Grid.Row="0" Margin="0,0,0,24">
            <StackPanel>
                <TextBlock Text="Reports"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="{DynamicResource TextPrimaryBrush}"/>
                <TextBlock Text="Generate and manage COA compliance reports"
                           FontSize="14"
                           Foreground="{DynamicResource TextSecondaryBrush}"
                           Margin="0,4,0,0"/>
            </StackPanel>
        </Grid>

        <!-- Report Generation Section -->
        <Border Grid.Row="1" Style="{StaticResource CardStyle}" Margin="0,0,0,16">
            <StackPanel>
                <TextBlock Text="Generate Reports"
                           Style="{StaticResource CardHeaderStyle}"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Monthly Report -->
                    <Border Grid.Column="0" Style="{StaticResource FlatCardStyle}" Margin="0,0,8,0">
                        <StackPanel>
                            <TextBlock Text="Monthly Report"
                                       FontWeight="SemiBold"
                                       FontSize="16"
                                       Margin="0,0,0,12"/>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                <StackPanel Margin="0,0,12,0">
                                    <TextBlock Text="Year" Style="{StaticResource FormLabelStyle}"/>
                                    <ComboBox ItemsSource="{Binding FiscalYears}"
                                              SelectedItem="{Binding SelectedFiscalYear}"
                                              Width="100"/>
                                </StackPanel>
                                <StackPanel>
                                    <TextBlock Text="Month" Style="{StaticResource FormLabelStyle}"/>
                                    <ComboBox ItemsSource="{Binding Months}"
                                              SelectedValue="{Binding SelectedMonth}"
                                              SelectedValuePath="Month"
                                              DisplayMemberPath="Name"
                                              Width="120"/>
                                </StackPanel>
                            </StackPanel>

                            <Button Content="Generate Monthly Report"
                                    Command="{Binding GenerateMonthlyReportCommand}"
                                    Style="{StaticResource PrimaryButton}"/>
                        </StackPanel>
                    </Border>

                    <!-- Quarterly Report -->
                    <Border Grid.Column="1" Style="{StaticResource FlatCardStyle}" Margin="8,0">
                        <StackPanel>
                            <TextBlock Text="Quarterly Report"
                                       FontWeight="SemiBold"
                                       FontSize="16"
                                       Margin="0,0,0,12"/>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                <StackPanel Margin="0,0,12,0">
                                    <TextBlock Text="Year" Style="{StaticResource FormLabelStyle}"/>
                                    <ComboBox ItemsSource="{Binding FiscalYears}"
                                              SelectedItem="{Binding SelectedFiscalYear}"
                                              Width="100"/>
                                </StackPanel>
                                <StackPanel>
                                    <TextBlock Text="Quarter" Style="{StaticResource FormLabelStyle}"/>
                                    <ComboBox ItemsSource="{Binding Quarters}"
                                              SelectedValue="{Binding SelectedQuarter}"
                                              SelectedValuePath="Quarter"
                                              DisplayMemberPath="Name"
                                              Width="120"/>
                                </StackPanel>
                            </StackPanel>

                            <Button Content="Generate Quarterly Report"
                                    Command="{Binding GenerateQuarterlyReportCommand}"
                                    Style="{StaticResource InfoButton}"/>
                        </StackPanel>
                    </Border>

                    <!-- Annual Report -->
                    <Border Grid.Column="2" Style="{StaticResource FlatCardStyle}" Margin="8,0,0,0">
                        <StackPanel>
                            <TextBlock Text="Annual Report"
                                       FontWeight="SemiBold"
                                       FontSize="16"
                                       Margin="0,0,0,12"/>

                            <StackPanel Margin="0,0,0,12">
                                <TextBlock Text="Year" Style="{StaticResource FormLabelStyle}"/>
                                <ComboBox ItemsSource="{Binding FiscalYears}"
                                          SelectedItem="{Binding SelectedFiscalYear}"
                                          Width="100"/>
                            </StackPanel>

                            <Button Content="Generate Annual Report"
                                    Command="{Binding GenerateAnnualReportCommand}"
                                    Style="{StaticResource SuccessButton}"
                                    Margin="0,24,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Quick Reports -->
                <StackPanel Orientation="Horizontal" Margin="0,16,0,0">
                    <Button Content="Budget Utilization Report"
                            Command="{Binding GenerateBudgetUtilizationCommand}"
                            Style="{StaticResource OutlineButton}"
                            Margin="0,0,8,0"/>
                    <Button Content="Cash Flow Report"
                            Command="{Binding GenerateCashFlowCommand}"
                            Style="{StaticResource OutlineButton}"
                            Margin="0,0,8,0"/>
                    <Button Content="Export Comparative Statement (Excel)"
                            Command="{Binding ExportComparativeStatementCommand}"
                            Style="{StaticResource SuccessButton}"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Reports List -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Text="Generated Reports"
                               Style="{StaticResource CardHeaderStyle}"/>

                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,12">
                        <TextBlock Text="Filter by Type:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <ComboBox ItemsSource="{Binding ReportTypeOptions}"
                                  SelectedItem="{Binding FilterReportType}"
                                  Width="150"/>
                        <Button Content="Refresh"
                                Command="{Binding LoadReportsCommand}"
                                Style="{StaticResource OutlineButton}"
                                Margin="12,0,0,0"/>
                    </StackPanel>

                    <DataGrid Grid.Row="2"
                              ItemsSource="{Binding Reports}"
                              SelectedItem="{Binding SelectedReport}"
                              Style="{StaticResource DataGridStyle}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Report #" Binding="{Binding ReportNumber}" Width="200"/>
                            <DataGridTextColumn Header="Title" Binding="{Binding ReportTitle}" Width="*"/>
                            <DataGridTextColumn Header="Type" Binding="{Binding ReportType}" Width="100"/>
                            <DataGridTextColumn Header="Period" Width="180">
                                <DataGridTextColumn.Binding>
                                    <MultiBinding StringFormat="{}{0:MMM dd} - {1:MMM dd, yyyy}">
                                        <Binding Path="PeriodStart"/>
                                        <Binding Path="PeriodEnd"/>
                                    </MultiBinding>
                                </DataGridTextColumn.Binding>
                            </DataGridTextColumn>
                            <DataGridTemplateColumn Header="Status" Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <components:StatusTag Status="{Binding Status}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Header="Generated" Binding="{Binding GeneratedAt, StringFormat='{}{0:MMM dd, yyyy}'}" Width="120"/>
                            <DataGridTemplateColumn Header="Actions" Width="200">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Content="View"
                                                    Command="{Binding DataContext.ViewReportCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"
                                                    Style="{StaticResource SmallButton}"
                                                    Margin="0,0,4,0"/>
                                            <Button Content="Export"
                                                    Command="{Binding DataContext.ExportReportCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"
                                                    Style="{StaticResource SmallButton}"
                                                    Background="{StaticResource InfoBrush}"
                                                    Margin="0,0,4,0"/>
                                            <Button Content="Submit"
                                                    Command="{Binding DataContext.SubmitReportCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"
                                                    Style="{StaticResource SmallButton}"
                                                    Background="{StaticResource SuccessBrush}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>

            <!-- Report Details Panel -->
            <Border Grid.Column="1"
                    Style="{StaticResource CardStyle}"
                    Width="350"
                    Margin="16,0,0,0"
                    Visibility="{Binding SelectedReport, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Invert}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="Report Details"
                                   Style="{StaticResource CardHeaderStyle}"/>

                        <TextBlock Text="{Binding SelectedReport.ReportTitle}"
                                   FontWeight="SemiBold"
                                   FontSize="16"
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,16"/>

                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,0,12">
                                <TextBlock Text="Total Appropriation" FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                <TextBlock Text="{Binding SelectedReport.TotalAppropriation, StringFormat='P{0:N2}'}"
                                           FontWeight="SemiBold"/>
                            </StackPanel>

                            <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,0,0,12">
                                <TextBlock Text="Total Obligations" FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                <TextBlock Text="{Binding SelectedReport.TotalObligations, StringFormat='P{0:N2}'}"
                                           FontWeight="SemiBold"/>
                            </StackPanel>

                            <StackPanel Grid.Row="1" Grid.Column="0">
                                <TextBlock Text="Total Disbursements" FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                <TextBlock Text="{Binding SelectedReport.TotalDisbursements, StringFormat='P{0:N2}'}"
                                           FontWeight="SemiBold"/>
                            </StackPanel>

                            <StackPanel Grid.Row="1" Grid.Column="1">
                                <TextBlock Text="Unobligated Balance" FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                <TextBlock Text="{Binding SelectedReport.UnobligatedBalance, StringFormat='P{0:N2}'}"
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource SuccessBrush}"/>
                            </StackPanel>
                        </Grid>

                        <Border Style="{StaticResource AlertInfoStyle}" Margin="0,0,0,16">
                            <StackPanel>
                                <TextBlock Text="Status" FontWeight="SemiBold"/>
                                <components:StatusTag Status="{Binding SelectedReport.Status}" Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>

                        <TextBlock Text="Period Covered"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,4"/>
                        <TextBlock Margin="0,0,0,16">
                            <TextBlock.Text>
                                <MultiBinding StringFormat="{}{0:MMMM dd, yyyy} to {1:MMMM dd, yyyy}">
                                    <Binding Path="SelectedReport.PeriodStart"/>
                                    <Binding Path="SelectedReport.PeriodEnd"/>
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>

                        <Button Content="Export to Word"
                                Command="{Binding ExportReportCommand}"
                                CommandParameter="{Binding SelectedReport}"
                                Style="{StaticResource PrimaryButton}"
                                HorizontalAlignment="Stretch"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</UserControl>
