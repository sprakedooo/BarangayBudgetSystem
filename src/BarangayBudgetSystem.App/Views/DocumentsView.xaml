<UserControl x:Class="BarangayBudgetSystem.App.Views.DocumentsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:helpers="clr-namespace:BarangayBudgetSystem.App.Helpers"
             xmlns:components="clr-namespace:BarangayBudgetSystem.App.Components"
             Background="{DynamicResource BackgroundBrush}">

    <UserControl.Resources>
        <helpers:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <helpers:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Page Header -->
        <Grid Grid.Row="0" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock Text="Documents"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="{DynamicResource TextPrimaryBrush}"/>
                <TextBlock Text="Generate PR, PO, DV documents and manage attachments"
                           FontSize="14"
                           Foreground="{DynamicResource TextSecondaryBrush}"
                           Margin="0,4,0,0"/>
            </StackPanel>

            <Button Grid.Column="1"
                    Content="Open Documents Folder"
                    Command="{Binding OpenFolderCommand}"
                    Style="{StaticResource OutlineButton}"/>
        </Grid>

        <!-- Content Area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="400"/>
            </Grid.ColumnDefinitions>

            <!-- Transactions List -->
            <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,16,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
                        <TextBlock Text="Select a Transaction"
                                   Style="{StaticResource CardHeaderStyle}"
                                   Margin="0"/>
                        <Button Content="Refresh"
                                Command="{Binding LoadTransactionsCommand}"
                                Style="{StaticResource OutlineButton}"
                                Margin="16,0,0,0"
                                Padding="12,6"/>
                    </StackPanel>

                    <DataGrid Grid.Row="1"
                              ItemsSource="{Binding Transactions}"
                              SelectedItem="{Binding SelectedTransaction}"
                              Style="{StaticResource DataGridStyle}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Transaction #" Binding="{Binding TransactionNumber}" Width="130"/>
                            <DataGridTextColumn Header="Date" Binding="{Binding TransactionDate, StringFormat='{}{0:MMM dd, yyyy}'}" Width="100"/>
                            <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*"/>
                            <DataGridTextColumn Header="Payee" Binding="{Binding Payee}" Width="150"/>
                            <DataGridTextColumn Header="Amount" Binding="{Binding Amount, StringFormat='P{0:N2}'}" Width="110"/>
                            <DataGridTemplateColumn Header="Status" Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <components:StatusTag Status="{Binding Status}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="" Width="80">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="Select"
                                                Command="{Binding DataContext.SelectTransactionCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource SmallButton}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>

            <!-- Document Generation Panel -->
            <Border Grid.Column="1" Style="{StaticResource CardStyle}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="Document Generation"
                                   Style="{StaticResource CardHeaderStyle}"/>

                        <!-- No Transaction Selected -->
                        <Border Style="{StaticResource AlertInfoStyle}"
                                Visibility="{Binding SelectedTransaction, Converter={StaticResource NullToVisibilityConverter}}">
                            <TextBlock Text="Select a transaction from the list to generate documents or manage attachments."
                                       TextWrapping="Wrap"/>
                        </Border>

                        <!-- Transaction Selected -->
                        <StackPanel Visibility="{Binding SelectedTransaction, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Invert}">
                            <!-- Transaction Info -->
                            <Border Style="{StaticResource FlatCardStyle}" Margin="0,0,0,16">
                                <StackPanel>
                                    <TextBlock Text="{Binding SelectedTransaction.TransactionNumber}"
                                               FontWeight="SemiBold"
                                               FontSize="16"/>
                                    <TextBlock Text="{Binding SelectedTransaction.Description}"
                                               TextWrapping="Wrap"
                                               Foreground="{DynamicResource TextSecondaryBrush}"
                                               Margin="0,4,0,0"/>
                                    <TextBlock Margin="0,8,0,0">
                                        <Run Text="Amount: " FontWeight="SemiBold"/>
                                        <Run Text="{Binding SelectedTransaction.Amount, StringFormat='P{0:N2}'}"/>
                                    </TextBlock>
                                </StackPanel>
                            </Border>

                            <!-- Barangay Name Setting -->
                            <StackPanel Style="{StaticResource FormGroupStyle}">
                                <TextBlock Text="Barangay Name" Style="{StaticResource FormLabelStyle}"/>
                                <TextBox Text="{Binding BarangayName, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource FormTextBoxStyle}"/>
                            </StackPanel>

                            <!-- Generate Documents -->
                            <TextBlock Text="Generate Documents"
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,12"/>

                            <Button Content="Generate Purchase Request (PR)"
                                    Command="{Binding GeneratePRCommand}"
                                    CommandParameter="{Binding SelectedTransaction}"
                                    Style="{StaticResource PrimaryButton}"
                                    Margin="0,0,0,8"/>

                            <Button Content="Generate Purchase Order (PO)"
                                    Command="{Binding GeneratePOCommand}"
                                    CommandParameter="{Binding SelectedTransaction}"
                                    Style="{StaticResource InfoButton}"
                                    Margin="0,0,0,8"/>

                            <Button Content="Generate Disbursement Voucher (DV)"
                                    Command="{Binding GenerateDVCommand}"
                                    CommandParameter="{Binding SelectedTransaction}"
                                    Style="{StaticResource SuccessButton}"
                                    Margin="0,0,0,16"/>

                            <!-- Document Numbers -->
                            <Border Style="{StaticResource FlatCardStyle}" Margin="0,0,0,16">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="PR #" FontSize="11" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                        <TextBlock Text="{Binding SelectedTransaction.PRNumber, TargetNullValue='Not Set'}"
                                                   FontWeight="Medium"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="PO #" FontSize="11" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                        <TextBlock Text="{Binding SelectedTransaction.PONumber, TargetNullValue='Not Set'}"
                                                   FontWeight="Medium"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="2">
                                        <TextBlock Text="DV #" FontSize="11" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                        <TextBlock Text="{Binding SelectedTransaction.DVNumber, TargetNullValue='Not Set'}"
                                                   FontWeight="Medium"/>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!-- Attachments Section -->
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0"
                                           Text="Attachments"
                                           FontWeight="SemiBold"/>
                                <Button Grid.Column="1"
                                        Content="+ Add"
                                        Command="{Binding AddAttachmentCommand}"
                                        Style="{StaticResource SmallButton}"/>
                            </Grid>

                            <ItemsControl ItemsSource="{Binding Attachments}" MaxHeight="200">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="{StaticResource BorderLightBrush}"
                                                BorderThickness="0,0,0,1"
                                                Padding="0,8">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <StackPanel Grid.Column="0">
                                                    <TextBlock Text="{Binding OriginalFileName}"
                                                               FontWeight="Medium"
                                                               TextTrimming="CharacterEllipsis"/>
                                                    <TextBlock Text="{Binding AttachmentType}"
                                                               FontSize="11"
                                                               Foreground="{DynamicResource TextSecondaryBrush}"/>
                                                </StackPanel>

                                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                                    <Button Content="View"
                                                            Command="{Binding DataContext.ViewAttachmentCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                            CommandParameter="{Binding}"
                                                            Style="{StaticResource IconButton}"
                                                            Margin="0,0,4,0"/>
                                                    <Button Content="X"
                                                            Command="{Binding DataContext.DeleteAttachmentCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                            CommandParameter="{Binding}"
                                                            Style="{StaticResource IconButton}"
                                                            Foreground="{StaticResource DangerBrush}"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <TextBlock Text="No attachments yet"
                                       Foreground="{StaticResource TextMutedBrush}"
                                       FontStyle="Italic"
                                       Visibility="{Binding Attachments.Count, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Invert}"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</UserControl>
