<Window x:Class="BarangayBudgetSystem.App.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Barangay Budget System - Login"
        Width="900" Height="600"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </Window.Resources>

    <Border CornerRadius="12" Background="White">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.3"/>
        </Border.Effect>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="400"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Branding (uses same colors as main window sidebar) -->
            <Border Grid.Column="0" CornerRadius="12,0,0,12"
                    Background="{DynamicResource SidebarGradientBrush}">

                <Grid>
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="40">
                        <!-- Logo/Icon -->
                        <Border Width="100" Height="100" CornerRadius="50"
                                Background="White" Margin="0,0,0,24"
                                HorizontalAlignment="Center">
                            <TextBlock Text="B" FontSize="48" FontWeight="Bold"
                                       Foreground="#2c3e50" HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>

                        <TextBlock Text="Barangay Budget System"
                                   FontSize="28" FontWeight="Bold"
                                   Foreground="White"
                                   HorizontalAlignment="Center"
                                   TextAlignment="Center"/>

                        <TextBlock Text="Financial Management Solution for Barangay Operations"
                                   FontSize="14" Foreground="#a0b0c0"
                                   HorizontalAlignment="Center"
                                   TextAlignment="Center"
                                   Margin="0,12,0,0"
                                   TextWrapping="Wrap"
                                   MaxWidth="350"/>

                        <Border Margin="0,40,0,0"
                                Background="Transparent"
                                BorderBrush="#4a6278"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="20">
                            <StackPanel>
                                <TextBlock Text="Features:"
                                           FontWeight="SemiBold"
                                           FontSize="14"
                                           Foreground="White"
                                           Margin="0,0,0,12"/>
                                <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                    <TextBlock Text="*" Foreground="#5dade2" Margin="0,0,8,0"/>
                                    <TextBlock Text="Budget Tracking &amp; Appropriation" Foreground="#d0dce8" FontSize="13"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                    <TextBlock Text="*" Foreground="#5dade2" Margin="0,0,8,0"/>
                                    <TextBlock Text="Transaction Management" Foreground="#d0dce8" FontSize="13"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                    <TextBlock Text="*" Foreground="#5dade2" Margin="0,0,8,0"/>
                                    <TextBlock Text="COA-Compliant Reports" Foreground="#d0dce8" FontSize="13"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                    <TextBlock Text="*" Foreground="#5dade2" Margin="0,0,8,0"/>
                                    <TextBlock Text="Annual Investment Plan" Foreground="#d0dce8" FontSize="13"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- Version Info -->
                    <TextBlock Text="Version 1.0.0"
                               Foreground="#7f8c9a"
                               FontSize="11"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Bottom"
                               Margin="0,0,0,20"/>
                </Grid>
            </Border>

            <!-- Right Panel - Login Form -->
            <Grid Grid.Column="1" Margin="40">
                <!-- Close Button -->
                <Button Content="X"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Width="32" Height="32"
                        Background="Transparent"
                        BorderThickness="0"
                        Foreground="#6c757d"
                        FontSize="16"
                        FontWeight="Bold"
                        Cursor="Hand"
                        Click="CloseButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" Background="Transparent" CornerRadius="4">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#f8d7da"/>
                                    <Setter Property="Foreground" Value="#dc3545"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="Welcome Back"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="#212529"/>

                    <TextBlock Text="Sign in to continue"
                               FontSize="14"
                               Foreground="#6c757d"
                               Margin="0,8,0,32"/>

                    <!-- Error Message -->
                    <Border Visibility="{Binding HasError, Converter={StaticResource BoolToVis}}"
                            Background="#f8d7da"
                            BorderBrush="#f5c6cb"
                            BorderThickness="1"
                            CornerRadius="6"
                            Padding="12"
                            Margin="0,0,0,16">
                        <TextBlock Text="{Binding ErrorMessage}"
                                   Foreground="#721c24"
                                   TextWrapping="Wrap"
                                   FontSize="13"/>
                    </Border>

                    <!-- Username -->
                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="Username"
                                   FontSize="13"
                                   FontWeight="Medium"
                                   Foreground="#212529"
                                   Margin="0,0,0,8"/>
                        <TextBox x:Name="UsernameTextBox"
                                 Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource FormTextBoxStyle}"/>
                    </StackPanel>

                    <!-- Password -->
                    <StackPanel Margin="0,0,0,24">
                        <TextBlock Text="Password"
                                   FontSize="13"
                                   FontWeight="Medium"
                                   Foreground="#212529"
                                   Margin="0,0,0,8"/>
                        <PasswordBox x:Name="PasswordBox"
                                     PasswordChanged="PasswordBox_PasswordChanged"
                                     Padding="12,10"
                                     FontSize="14"
                                     BorderBrush="#dee2e6"
                                     BorderThickness="1">
                            <PasswordBox.Template>
                                <ControlTemplate TargetType="PasswordBox">
                                    <Border x:Name="border"
                                            Background="White"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="6"
                                            Padding="{TemplateBinding Padding}">
                                        <ScrollViewer x:Name="PART_ContentHost"
                                                      VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="BorderBrush" Value="#80bdff"/>
                                        </Trigger>
                                        <Trigger Property="IsFocused" Value="True">
                                            <Setter TargetName="border" Property="BorderBrush" Value="#007bff"/>
                                            <Setter TargetName="border" Property="BorderThickness" Value="1.5"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </PasswordBox.Template>
                        </PasswordBox>
                    </StackPanel>

                    <!-- Login Button -->
                    <Button Command="{Binding LoginCommand}"
                            Height="44"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#2c3e50"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="FontSize" Value="15"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border"
                                                    Background="{TemplateBinding Background}"
                                                    CornerRadius="6">
                                                <Grid>
                                                    <TextBlock Text="Sign In"
                                                               Foreground="White"
                                                               FontSize="15"
                                                               FontWeight="SemiBold"
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center"
                                                               Visibility="{Binding IsLoggingIn, Converter={StaticResource BoolToVis}, ConverterParameter=Invert}"/>
                                                    <StackPanel Orientation="Horizontal"
                                                                HorizontalAlignment="Center"
                                                                VerticalAlignment="Center"
                                                                Visibility="{Binding IsLoggingIn, Converter={StaticResource BoolToVis}}">
                                                        <TextBlock Text="Signing in..." Foreground="White" FontSize="15" FontWeight="SemiBold"/>
                                                    </StackPanel>
                                                </Grid>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#34495e"/>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#1a252f"/>
                                                </Trigger>
                                                <Trigger Property="IsEnabled" Value="False">
                                                    <Setter TargetName="border" Property="Opacity" Value="0.65"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Default Credentials Hint -->
                    <Border Background="#e7f3ff"
                            CornerRadius="6"
                            Padding="12"
                            Margin="0,24,0,0">
                        <StackPanel>
                            <TextBlock Text="Default Credentials:"
                                       FontWeight="SemiBold"
                                       FontSize="12"
                                       Foreground="#004085"/>
                            <TextBlock Text="Username: admin"
                                       FontSize="12"
                                       Foreground="#004085"
                                       Margin="0,4,0,0"/>
                            <TextBlock Text="Password: admin123"
                                       FontSize="12"
                                       Foreground="#004085"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>
