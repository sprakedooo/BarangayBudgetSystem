<UserControl x:Class="BarangayBudgetSystem.App.Views.FundsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:helpers="clr-namespace:BarangayBudgetSystem.App.Helpers"
             Background="{StaticResource BackgroundBrush}">

    <UserControl.Resources>
        <helpers:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <helpers:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
        <helpers:PercentageColorConverter x:Key="PercentageColorConverter"/>
    </UserControl.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Page Header -->
        <Grid Grid.Row="0" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock Text="Appropriation Funds"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="{StaticResource TextPrimaryBrush}"/>
                <TextBlock Text="Manage budget allocation and funds"
                           FontSize="14"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           Margin="0,4,0,0"/>
            </StackPanel>

            <Button Grid.Column="1"
                    Content="+ New Fund"
                    Command="{Binding NewFundCommand}"
                    Style="{StaticResource PrimaryButton}"
                    IsEnabled="{Binding IsEditing, Converter={StaticResource InverseBooleanConverter}}"/>
        </Grid>

        <!-- Filters -->
        <Border Grid.Row="1" Style="{StaticResource FlatCardStyle}" Margin="0,0,0,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Margin="0,0,16,0">
                    <TextBlock Text="Fiscal Year" Style="{StaticResource FormLabelStyle}"/>
                    <ComboBox ItemsSource="{Binding FiscalYears}"
                              SelectedItem="{Binding CurrentFiscalYear}"
                              Style="{StaticResource FormComboBoxStyle}"
                              Width="120"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Margin="0,0,16,0">
                    <TextBlock Text="Category" Style="{StaticResource FormLabelStyle}"/>
                    <ComboBox ItemsSource="{Binding CategoryOptions}"
                              SelectedItem="{Binding FilterCategory}"
                              Style="{StaticResource FormComboBoxStyle}"
                              Width="200"/>
                </StackPanel>

                <Button Grid.Column="3"
                        Content="Refresh"
                        Command="{Binding LoadFundsCommand}"
                        Style="{StaticResource OutlineButton}"
                        VerticalAlignment="Bottom"/>
            </Grid>
        </Border>

        <!-- Content Area -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Funds List -->
            <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Text="Fund List"
                               Style="{StaticResource CardHeaderStyle}"/>

                    <DataGrid Grid.Row="1"
                              ItemsSource="{Binding Funds}"
                              SelectedItem="{Binding SelectedFund}"
                              Style="{StaticResource DataGridStyle}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Code" Binding="{Binding FundCode}" Width="120"/>
                            <DataGridTextColumn Header="Fund Name" Binding="{Binding FundName}" Width="*"/>
                            <DataGridTextColumn Header="Category" Binding="{Binding Category}" Width="150"/>
                            <DataGridTextColumn Header="Allocated" Binding="{Binding AllocatedAmount, StringFormat='P{0:N2}'}" Width="120"/>
                            <DataGridTextColumn Header="Utilized" Binding="{Binding UtilizedAmount, StringFormat='P{0:N2}'}" Width="120"/>
                            <DataGridTextColumn Header="Balance" Binding="{Binding RemainingBalance, StringFormat='P{0:N2}'}" Width="120"/>
                            <DataGridTemplateColumn Header="Utilization" Width="120">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <ProgressBar Value="{Binding UtilizationPercentage, Mode=OneWay}"
                                                         Maximum="100"
                                                         Height="8"
                                                         Background="#e9ecef"
                                                         Foreground="{Binding UtilizationPercentage, Converter={StaticResource PercentageColorConverter}}"/>
                                            <TextBlock Text="{Binding UtilizationPercentage, StringFormat='{}{0:F1}%'}"
                                                       FontSize="11"
                                                       HorizontalAlignment="Center"
                                                       Margin="0,12,0,0"/>
                                        </Grid>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="Actions" Width="150">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Content="Edit"
                                                    Command="{Binding DataContext.EditFundCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"
                                                    Style="{StaticResource SmallButton}"
                                                    Margin="0,0,4,0"/>
                                            <Button Content="Delete"
                                                    Command="{Binding DataContext.DeleteFundCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"
                                                    Style="{StaticResource SmallButton}"
                                                    Background="{StaticResource DangerBrush}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>

            <!-- Edit Panel -->
            <Border Grid.Column="1"
                    Style="{StaticResource CardStyle}"
                    Width="380"
                    Margin="16,0,0,0"
                    Visibility="{Binding IsEditing, Converter={StaticResource BooleanToVisibilityConverter}}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Style="{StaticResource CardHeaderStyle}">
                            <TextBlock.Text>
                                <Binding Path="IsNewFund">
                                    <Binding.Converter>
                                        <helpers:BooleanToVisibilityConverter/>
                                    </Binding.Converter>
                                </Binding>
                            </TextBlock.Text>
                        </TextBlock>

                        <TextBlock Text="New Fund"
                                   Style="{StaticResource CardHeaderStyle}"
                                   Visibility="{Binding IsNewFund, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        <TextBlock Text="Edit Fund"
                                   Style="{StaticResource CardHeaderStyle}"
                                   Visibility="{Binding IsNewFund, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Invert}"/>

                        <StackPanel Style="{StaticResource FormGroupStyle}">
                            <TextBlock Text="Fund Code *" Style="{StaticResource FormLabelStyle}"/>
                            <TextBox Text="{Binding EditingFund.FundCode, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource FormTextBoxStyle}"
                                     IsReadOnly="{Binding IsNewFund, Converter={StaticResource InverseBooleanConverter}}"/>
                        </StackPanel>

                        <StackPanel Style="{StaticResource FormGroupStyle}">
                            <TextBlock Text="Fund Name *" Style="{StaticResource FormLabelStyle}"/>
                            <TextBox Text="{Binding EditingFund.FundName, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource FormTextBoxStyle}"/>
                        </StackPanel>

                        <StackPanel Style="{StaticResource FormGroupStyle}">
                            <TextBlock Text="Category *" Style="{StaticResource FormLabelStyle}"/>
                            <ComboBox ItemsSource="{Binding CategoryOptions}"
                                      SelectedItem="{Binding EditingFund.Category}"
                                      Style="{StaticResource FormComboBoxStyle}"/>
                        </StackPanel>

                        <StackPanel Style="{StaticResource FormGroupStyle}">
                            <TextBlock Text="Description" Style="{StaticResource FormLabelStyle}"/>
                            <TextBox Text="{Binding EditingFund.Description, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource FormTextBoxStyle}"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     Height="80"/>
                        </StackPanel>

                        <StackPanel Style="{StaticResource FormGroupStyle}">
                            <TextBlock Text="Allocated Amount *" Style="{StaticResource FormLabelStyle}"/>
                            <TextBox Text="{Binding EditingFund.AllocatedAmount, UpdateSourceTrigger=PropertyChanged, StringFormat='{}{0:N2}'}"
                                     Style="{StaticResource FormTextBoxStyle}"/>
                        </StackPanel>

                        <StackPanel Style="{StaticResource FormGroupStyle}">
                            <TextBlock Text="Fiscal Year" Style="{StaticResource FormLabelStyle}"/>
                            <ComboBox ItemsSource="{Binding FiscalYears}"
                                      SelectedItem="{Binding EditingFund.FiscalYear}"
                                      Style="{StaticResource FormComboBoxStyle}"
                                      IsEnabled="{Binding IsNewFund}"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
                            <Button Content="Cancel"
                                    Command="{Binding CancelEditCommand}"
                                    Style="{StaticResource SecondaryButton}"
                                    Margin="0,0,8,0"/>
                            <Button Content="Save"
                                    Command="{Binding SaveFundCommand}"
                                    Style="{StaticResource SuccessButton}"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</UserControl>
