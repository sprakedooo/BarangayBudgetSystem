<Window x:Class="BarangayBudgetSystem.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:BarangayBudgetSystem.App.Views"
        xmlns:vm="clr-namespace:BarangayBudgetSystem.App.ViewModels"
        xmlns:System="clr-namespace:System;assembly=mscorlib"
        Title="Barangay Budget System"
        Height="800"
        Width="1400"
        MinHeight="600"
        MinWidth="1000"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource BackgroundBrush}">

    <Window.Resources>
        <!-- DataTemplates for Views -->
        <DataTemplate DataType="{x:Type vm:DashboardViewModel}">
            <views:DashboardView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:BudgetSetupViewModel}">
            <views:BudgetSetupView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:TransactionsViewModel}">
            <views:TransactionsView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:FundsViewModel}">
            <views:FundsView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ReportsViewModel}">
            <views:ReportsView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:DocumentsViewModel}">
            <views:DocumentsView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:SettingsViewModel}">
            <views:SettingsView/>
        </DataTemplate>

        <!-- Navigation Button Style -->
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#adb5bd"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#495057"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#007bff"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Selected Navigation Button Style -->
        <Style x:Key="NavButtonSelectedStyle" TargetType="Button">
            <Setter Property="Background" Value="#007bff"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0"
                Background="{DynamicResource SidebarGradientBrush}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Logo/Header -->
                <Border Grid.Row="0"
                        Padding="20"
                        BorderBrush="#ffffff20"
                        BorderThickness="0,0,0,1">
                    <StackPanel>
                        <TextBlock Text="Barangay"
                                   FontSize="14"
                                   Foreground="#adb5bd"/>
                        <TextBlock Text="Budget System"
                                   FontSize="22"
                                   FontWeight="Bold"
                                   Foreground="White"/>
                    </StackPanel>
                </Border>

                <!-- Navigation Menu -->
                <ScrollViewer Grid.Row="1"
                              VerticalScrollBarVisibility="Auto"
                              Padding="0,12">
                    <StackPanel>
                        <!-- Dashboard -->
                        <Button Command="{Binding NavigateToDashboardCommand}"
                                Style="{StaticResource NavButtonStyle}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE80F;" FontFamily="Segoe MDL2 Assets" FontSize="16" Width="24"/>
                                <TextBlock Text="Dashboard" Margin="8,0,0,0"/>
                            </StackPanel>
                        </Button>

                        <!-- Budget Setup -->
                        <Button Command="{Binding NavigateToBudgetSetupCommand}"
                                Style="{StaticResource NavButtonStyle}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE762;" FontFamily="Segoe MDL2 Assets" FontSize="16" Width="24"/>
                                <TextBlock Text="Budget Setup" Margin="8,0,0,0"/>
                            </StackPanel>
                        </Button>

                        <!-- Transactions -->
                        <Button Command="{Binding NavigateToTransactionsCommand}"
                                Style="{StaticResource NavButtonStyle}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE8AB;" FontFamily="Segoe MDL2 Assets" FontSize="16" Width="24"/>
                                <TextBlock Text="Transactions" Margin="8,0,0,0"/>
                            </StackPanel>
                        </Button>

                        <!-- Funds -->
                        <Button Command="{Binding NavigateToFundsCommand}"
                                Style="{StaticResource NavButtonStyle}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE825;" FontFamily="Segoe MDL2 Assets" FontSize="16" Width="24"/>
                                <TextBlock Text="Funds" Margin="8,0,0,0"/>
                            </StackPanel>
                        </Button>

                        <!-- Reports -->
                        <Button Command="{Binding NavigateToReportsCommand}"
                                Style="{StaticResource NavButtonStyle}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE9F9;" FontFamily="Segoe MDL2 Assets" FontSize="16" Width="24"/>
                                <TextBlock Text="Reports" Margin="8,0,0,0"/>
                            </StackPanel>
                        </Button>

                        <!-- Documents -->
                        <Button Command="{Binding NavigateToDocumentsCommand}"
                                Style="{StaticResource NavButtonStyle}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE8A5;" FontFamily="Segoe MDL2 Assets" FontSize="16" Width="24"/>
                                <TextBlock Text="Documents" Margin="8,0,0,0"/>
                            </StackPanel>
                        </Button>

                        <Separator Margin="16,12" Background="#ffffff20"/>

                        <!-- Settings -->
                        <Button Command="{Binding NavigateToSettingsCommand}"
                                Style="{StaticResource NavButtonStyle}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE713;" FontFamily="Segoe MDL2 Assets" FontSize="16" Width="24"/>
                                <TextBlock Text="Settings" Margin="8,0,0,0"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </ScrollViewer>

                <!-- Footer / User Info -->
                <Border Grid.Row="2"
                        Padding="16"
                        BorderBrush="#ffffff20"
                        BorderThickness="0,1,0,0">
                    <StackPanel>
                        <TextBlock Text="{Binding UserDisplayName}"
                                   FontWeight="SemiBold"
                                   Foreground="White"/>
                        <TextBlock Text="{Binding UserRole}"
                                   FontSize="12"
                                   Foreground="#adb5bd"/>
                        <TextBlock Text="{Binding CurrentFiscalYear, StringFormat='FY {0}'}"
                                   FontSize="11"
                                   Foreground="#6c757d"
                                   Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Top Header Bar -->
            <Border Grid.Row="0"
                    Background="{DynamicResource HeaderBackgroundBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="0,0,0,1"
                    Padding="24,12">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="{Binding CurrentViewName}"
                               FontSize="18"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"
                               Foreground="{DynamicResource TextPrimaryBrush}"/>

                    <StackPanel Grid.Column="1"
                                Orientation="Horizontal"
                                VerticalAlignment="Center">
                        <TextBlock Text="{Binding Source={x:Static System:DateTime.Now}, StringFormat='{}{0:dddd, MMMM dd, yyyy}'}"
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Content Area -->
            <ContentControl Grid.Row="1"
                            Content="{Binding CurrentViewModel}"/>
        </Grid>
    </Grid>
</Window>
