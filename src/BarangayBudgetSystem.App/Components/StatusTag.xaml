<UserControl x:Class="BarangayBudgetSystem.App.Components.StatusTag"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:helpers="clr-namespace:BarangayBudgetSystem.App.Helpers"
             x:Name="StatusTagControl">

    <UserControl.Resources>
        <helpers:StatusToColorConverter x:Key="StatusToColorConverter"/>
    </UserControl.Resources>

    <Border CornerRadius="12"
            Padding="10,4"
            Background="{Binding Status, ElementName=StatusTagControl, Converter={StaticResource StatusToColorConverter}}"
            HorizontalAlignment="Left">
        <TextBlock Text="{Binding Status, ElementName=StatusTagControl}"
                   FontSize="12"
                   FontWeight="Medium"
                   Foreground="White"/>
    </Border>
</UserControl>
