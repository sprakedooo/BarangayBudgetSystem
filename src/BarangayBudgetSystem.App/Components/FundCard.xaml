<UserControl x:Class="BarangayBudgetSystem.App.Components.FundCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:helpers="clr-namespace:BarangayBudgetSystem.App.Helpers"
             x:Name="FundCardControl">

    <UserControl.Resources>
        <helpers:PercentageColorConverter x:Key="PercentageColorConverter"/>
        <helpers:CurrencyConverter x:Key="CurrencyConverter"/>
        <helpers:PercentageConverter x:Key="PercentageConverter"/>
    </UserControl.Resources>

    <Border Style="{StaticResource CardStyle}"
            Margin="0,0,0,12">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                <Ellipse Width="10" Height="10"
                         Fill="{Binding Fund.UtilizationPercentage, ElementName=FundCardControl, Converter={StaticResource PercentageColorConverter}}"
                         Margin="0,0,8,0"
                         VerticalAlignment="Center"/>
                <TextBlock Text="{Binding Fund.FundCode, ElementName=FundCardControl}"
                           FontWeight="SemiBold"
                           FontSize="14"
                           Foreground="{StaticResource TextPrimaryBrush}"/>
            </StackPanel>

            <!-- Fund Name -->
            <TextBlock Grid.Row="1"
                       Text="{Binding Fund.FundName, ElementName=FundCardControl}"
                       FontSize="16"
                       FontWeight="Bold"
                       Foreground="{StaticResource TextPrimaryBrush}"
                       TextWrapping="Wrap"
                       Margin="0,0,0,12"/>

            <!-- Progress Bar -->
            <Grid Grid.Row="2" Margin="0,0,0,8">
                <ProgressBar Value="{Binding Fund.UtilizationPercentage, ElementName=FundCardControl}"
                             Maximum="100"
                             Height="8"
                             Background="#e9ecef"
                             Foreground="{Binding Fund.UtilizationPercentage, ElementName=FundCardControl, Converter={StaticResource PercentageColorConverter}}">
                    <ProgressBar.Template>
                        <ControlTemplate TargetType="ProgressBar">
                            <Grid>
                                <Border Background="{TemplateBinding Background}" CornerRadius="4"/>
                                <Border x:Name="PART_Indicator" Background="{TemplateBinding Foreground}" CornerRadius="4"
                                        HorizontalAlignment="Left"/>
                            </Grid>
                        </ControlTemplate>
                    </ProgressBar.Template>
                </ProgressBar>
            </Grid>

            <!-- Details -->
            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Allocated"
                               FontSize="11"
                               Foreground="{StaticResource TextSecondaryBrush}"/>
                    <TextBlock FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource TextPrimaryBrush}">
                        <TextBlock.Text>
                            <MultiBinding StringFormat="P {0:N2}">
                                <Binding Path="Fund.AllocatedAmount" ElementName="FundCardControl"/>
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>
                </StackPanel>

                <StackPanel Grid.Column="1">
                    <TextBlock Text="Utilized"
                               FontSize="11"
                               Foreground="{StaticResource TextSecondaryBrush}"/>
                    <TextBlock FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource DangerBrush}">
                        <TextBlock.Text>
                            <MultiBinding StringFormat="P {0:N2}">
                                <Binding Path="Fund.UtilizedAmount" ElementName="FundCardControl"/>
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>
                </StackPanel>

                <StackPanel Grid.Column="2">
                    <TextBlock Text="Balance"
                               FontSize="11"
                               Foreground="{StaticResource TextSecondaryBrush}"/>
                    <TextBlock FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource SuccessBrush}">
                        <TextBlock.Text>
                            <MultiBinding StringFormat="P {0:N2}">
                                <Binding Path="Fund.RemainingBalance" ElementName="FundCardControl"/>
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</UserControl>
